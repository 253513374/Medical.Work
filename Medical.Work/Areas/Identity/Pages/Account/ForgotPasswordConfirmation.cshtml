@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}


<div class=" vh-100 d-flex justify-content-center align-items-center" >
    <div class="shadow-lg  pa-8"  style="width:100%;max-width:500px;"  >
         <img src=/img/logo.png style="width:100%;height:auto"/>
         <div>
              <h4>   重置密码链接已经发送到指定邮箱,请检查您的电子邮件以重置您的密码。</h4>
         </div>
      
         <div class="form-group pt-3">
            <p>
                已经完成重置密码？请 <a id="login" asp-area="Identity" asp-page="/Account/Login"> Login </a>
            </p>
          </div>
    </div>
</div>