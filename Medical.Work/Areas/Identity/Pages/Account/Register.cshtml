    ViewData["Title"] = "注册";
}


<div class=" vh-100 d-flex justify-content-center align-items-center" >
    <div class="shadow-lg  pa-8"  style="width:100%;max-width:500px;"  >
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="margin-left: 50px;margin-right: 50px;margin-bottom: 50px;">
