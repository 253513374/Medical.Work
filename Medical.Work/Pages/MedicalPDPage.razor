

@page "/MedicalPDPage"



<div class="divtop marginlr">

    <div style="font-size:24px;font-weight:700">
        <GroupBox Title="微生物检查" >
            <div style="font-size:16px;font-weight:500">
                <ValidateForm Model="@medicalPD_Microbiological">
                    <Row ItemsPerRow="ItemsPerRow.One">
                        <Select @bind-Value="@medicalPD_Microbiological.TestorisNot"></Select>
                    </Row>
                    <Row ItemsPerRow="ItemsPerRow.Two">
                        <DateTimePicker @bind-Value="@medicalPD_Microbiological.TestTime"></DateTimePicker>
                        <Select @bind-Value="@medicalPD_Microbiological.SpecimenType"></Select>
                    </Row>
                    <Divider></Divider>
                    <Row ItemsPerRow="ItemsPerRow.One">
                        <Select @bind-Value="@medicalPD_Microbiological.TestorNot"></Select>
                        <DateTimePicker @bind-Value="@medicalPD_Microbiological.ReportTime"></DateTimePicker>
                        <BootstrapInput @bind-Value="@medicalPD_Microbiological.Bacterial"></BootstrapInput>
                    </Row>
                </ValidateForm>
            </div>
        </GroupBox>
    </div>


    <div style="font-size:24px;font-weight:700">
        <GroupBox Title="药敏试验" style="">
            <div style="font-size:16px;font-weight:500">
                <ValidateForm Model="@medicalPD_DrugAllergy">
                    <Row ItemsPerRow="ItemsPerRow.One">
                        <Select @bind-Value="@medicalPD_DrugAllergy.TestorisNot"></Select>
                        <DateTimePicker @bind-Value="@medicalPD_DrugAllergy.TestTime"></DateTimePicker>
                    </Row>
                    <Row ItemsPerRow="ItemsPerRow.Two">

                        <Select @bind-Value="@medicalPD_DrugAllergy.DrugsensitivityTest"></Select>
                        <BootstrapInput @bind-Value="@medicalPD_DrugAllergy.DrugsensitivityTestOther"></BootstrapInput>
                    </Row>
                    <Divider></Divider>
                    <Row ItemsPerRow="ItemsPerRow.One">
                        <Select @bind-Value="@medicalPD_DrugAllergy.DrugsName"></Select>

                    </Row>
                    <Row ItemsPerRow="ItemsPerRow.Four">
                        <BootstrapInput @bind-Value="@medicalPD_DrugAllergy.MIC"></BootstrapInput>
                        <Select @bind-Value="@medicalPD_DrugAllergy.Susceptibility"></Select>
                        <BootstrapInput @bind-Value="@medicalPD_DrugAllergy.TMic"></BootstrapInput>
                        <BootstrapInput @bind-Value="@medicalPD_DrugAllergy.AUCMic"></BootstrapInput>
                    </Row>
                </ValidateForm>
            </div>


        </GroupBox>
    </div>
</div>

            @code {


                private MedicalPD_Microbiological medicalPD_Microbiological { set; get; } = new();

                private MedicalPD_DrugAllergy medicalPD_DrugAllergy { set; get; } = new();


            }
