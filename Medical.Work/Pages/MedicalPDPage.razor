

@page "/MedicalPDPage"

<h3>MedicalPDPage</h3>

<div class="marginlr">

    <GroupBox Title="微生物检查">
        <ValidateForm Model="@medicalPD_Microbiological">
            <Row ItemsPerRow="ItemsPerRow.One">
                <Select @bind-Value="@medicalPD_Microbiological.TestorisNot"></Select>
            </Row>
            <Row ItemsPerRow="ItemsPerRow.Two">
                <DateTimePicker @bind-Value="@medicalPD_Microbiological.TestTime"></DateTimePicker>
                <Select @bind-Value="@medicalPD_Microbiological.SpecimenType"></Select>
            </Row>
            <Divider></Divider>
            <Row ItemsPerRow="ItemsPerRow.One">
                <Select @bind-Value="@medicalPD_Microbiological.TestorNot"></Select>
                <DateTimePicker @bind-Value="@medicalPD_Microbiological.ReportTime"></DateTimePicker>
                <BootstrapInput @bind-Value="@medicalPD_Microbiological.Bacterial"></BootstrapInput>
            </Row>
        </ValidateForm>
      
    </GroupBox>

    <GroupBox Title="药敏试验">

    </GroupBox>

</div>

@code {


    private MedicalPD_Microbiological medicalPD_Microbiological { set; get; } = new();

    private MedicalPD_DrugAllergy medicalPD_DrugAllergy { set; get; } = new();


}
