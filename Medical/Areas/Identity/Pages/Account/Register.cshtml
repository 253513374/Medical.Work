@page
@model RegisterModel
@{
    ViewData["Title"] = "注册";
}



<div class=" h-100 d-flex justify-content-center align-items-center" >
    <div class="shadow pa-8"  style="width:500px;background-color:#ffffffa6;border-radius: 15px;"   >
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="margin-left: 50px;margin-right: 50px;margin-bottom: 50px;">
                 <div class="d-flex align-content-center justify-content-center" style="height:200px" >
                        <img src="/img/logo.png" class="img-fluid" style="width:auto;height:100%"/>
                </div>
               @* <hr />*@
                <div asp-validation-summary="All" class="text-danger"></div>
                 <div class="form-group pt-2">
                    <label  asp-for="Input.UserName"></label>
                    <input   asp-for="Input.UserName" class="form-control"  style="height:48px" placeholder="必填" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label  asp-for="Input.Email"></label>
                    <input   asp-for="Input.Email" class="form-control"  style="height:48px" placeholder="必填"  />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
 @*               <div class="form-group">
                    <label asp-for="Input.Birthday"></label>
                    <input asp-for="Input.Birthday" class="form-control" />
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="必填" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label >密码</label>
                    <input asp-for="Input.Password" class="form-control" style="height:48px" placeholder="必填"  />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                 <div class="form-group pt-2  pb-4">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" style="height:48px" placeholder="必填" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button style="width:100%" type="submit" class="btn btn-primary"> 注 册 </button>
                </div>
                <div class="form-group pt-3">
                    <p>
                        已经有账户？请 <a id="login" asp-area="Identity" asp-page="/Account/Login"> 登录 </a>
                    </p>

                </div>
            </form>
        </section>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
