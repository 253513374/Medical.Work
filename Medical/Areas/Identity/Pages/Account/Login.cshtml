@page
@model LoginModel

@{
    ViewData["Title"] = "登 录";
}



<div class="h-100 d-flex justify-content-center align-items-center" >
    <div class="shadow pa-8"  style="width:500px;background-color:#ffffffa6;border-radius: 15px;"   >
        <section>
            <form id="account" method="post" style="margin-left: 50px;margin-right: 50px;margin-bottom: 50px;">
             
                 <div class="d-flex align-content-center justify-content-center" style="height:200px" >
                        <img src="/img/logo.png" class="img-fluid" style="width:auto;height:100%"/>
                </div>
               @* <hr />*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group pt-2">
                    <label  >用户名/邮箱</label>
                    <input   asp-for="Input.UserName" class="form-control"  style="height:48px" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label >登录密码</label>
                    <input asp-for="Input.Password" class="form-control" style="height:48px" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class=" form-group pt-2 pb-4 d-flex justify-content-between align-items-center ">
                    <div class="checkbox">
           @*             <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>*@
                       
                    </div>
                     <div>
                        <a id="forgot-password" asp-page="./ForgotPassword">遗忘密码?</a>
                    </div>
                </div>
                <div class="form-group">
                    <button style="width:100%" type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group pt-4">
                 @*   <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">遗忘密码?</a>
                    </p>*@
                    <p>
                       没有账户？请 <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">点击注册</a>
                    </p>
                  @*  <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">重新发送电子邮件确认</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
