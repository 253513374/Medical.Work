@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "忘记密码了吗？";
}



<div class="h-100 d-flex justify-content-center align-items-center" >
    <div class="shadow pa-8"  style="width:500px;background-color:#ffffffa6;border-radius: 15px;"   >
        <section>
            <form method="post" style="margin-left: 50px;margin-right: 50px;margin-bottom: 50px;">
                <div class="d-flex align-content-center justify-content-center" style="height:200px" >
                    <img src="/img/logo.png" class="img-fluid" style="width:auto;height:100%"/>
                </div>
               @* <hr />*@
               <h5>请输入需要找回账号的注册邮箱.</h5>
                <div asp-validation-summary="All" class="text-danger " style="font-size: small;"></div>
                <div class="form-group pt-2">
                    <label asp-for="Input.Email"></label>
                    <input   asp-for="Input.Email" class="form-control"  style="height:48px" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group pt-4">
                    <button style="width:100%" type="submit" class="btn btn-primary"> 发 送 邮 件 </button>
                </div>
                <div class="form-group pt-3">
                    <p>
                       回忆起密码？请 <a id="login" asp-area="Identity" asp-page="/Account/Login"> 登录 </a>
                    </p>

                </div>
            </form>
        </section>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
