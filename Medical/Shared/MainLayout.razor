@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar   Elevation="0" Color="Color.Transparent">

        <MudIconButton Class="ml-16" Size="Size.Large" Variant="Variant.Outlined"  Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => DrawerToggle())" />
        <MudText Class="mx-5">Menu</MudText>
        <MudSpacer />
       <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode ="DrawerClipMode.Never" >
        <MudDrawerHeader Class="mt-16">
           
            <MudImage Width="220"  Src="img/logo.png" ObjectFit="ObjectFit.Contain" ObjectPosition="ObjectPosition.Center" ></MudImage>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-5 pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}