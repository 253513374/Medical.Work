

@*@using System.Drawing

@using DCorlor = System.Drawing.Color*@

<MudNavMenu Bordered="true" Color="Color.Primary" Margin="Margin.Normal">

    @if (NavVariant ==DrawerVariant.Mini)
    {
        <MudTooltip Text="首页" Arrow="true" Placement="Placement.Right">
               <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Outlined.Home">首页</MudNavLink>
        </MudTooltip>
        <MudTooltip Text="基础档案" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="PersonalFile" Icon="@Icons.Outlined.FilePresent">基础档案</MudNavLink>
        </MudTooltip>
        <MudNavGroup Title="类鼻疽-PK" Icon="@Icons.Outlined.BubbleChart" Expanded="false">
            <MudTooltip Text="给药方案" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="prescription"        Icon="@Icons.Outlined.ListAlt">给药方案</MudNavLink>
            </MudTooltip>
            <MudTooltip Text="采样信息" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="bloodsample"   Icon="@Icons.Outlined.BlurOn" >采样信息</MudNavLink>
            </MudTooltip>
        </MudNavGroup>
       
          <MudNavGroup Title="类鼻疽-PD"  Icon="@Icons.Outlined.Coronavirus" Expanded="false">
            <MudTooltip Text="临床微生物检查" Arrow="true" Placement="Placement.Right">
                 <MudNavLink Href="clinicalmicrobiology"  Icon="@Icons.Outlined.Margin">临床微生物检查</MudNavLink>
            </MudTooltip>
            <MudTooltip Text="药敏试验" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="drugallergytesting"  Icon="@Icons.Outlined.BlurCircular">药敏试验</MudNavLink>
            </MudTooltip>
           
            
        </MudNavGroup>
          <MudNavGroup Title="类鼻疽-PG"  Icon="@Icons.Outlined.Colorize" Expanded="false">
            <MudTooltip Text="药物基因组学" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="Pharmacogenomics"  Icon="@Icons.Outlined.Opacity" >药物基因组学</MudNavLink>
            </MudTooltip>
            <MudTooltip Text="病原菌基因" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="pathogengenes"  Icon="@Icons.Outlined.Vaccines">病原菌基因</MudNavLink>
            </MudTooltip>
        </MudNavGroup>
        <MudNavGroup Title="影像学检查" Icon="@Icons.Outlined.Collections" Expanded="false">
            <MudTooltip Text="纤维支气管镜检查" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="bronchofiberscope" Icon="@Icons.Outlined.Image">纤维支气管镜检查</MudNavLink>
            </MudTooltip>
            <MudTooltip Text="影像学检查" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="iconography" Icon="@Icons.Outlined.Image">影像学检查</MudNavLink>
            </MudTooltip>
            <MudTooltip Text="病理检查" Arrow="true" Placement="Placement.Right">
                <MudNavLink Href="pathology" Icon="@Icons.Outlined.Hvac">病理检查</MudNavLink>
            </MudTooltip>
        </MudNavGroup>
        <MudTooltip Text="实验室检查" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="laboratoryexaminations" Icon="@Icons.Outlined.DeviceThermostat">实验室检查</MudNavLink>
        </MudTooltip> 
        <MudTooltip Text="监护日志" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="guardianship" Icon="@Icons.Outlined.Hotel"         >监护日志</MudNavLink>
        </MudTooltip> 
        <MudTooltip Text="案例总结" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="summary" Icon="@Icons.Outlined.InsertDriveFile"  >案例总结</MudNavLink>
        </MudTooltip> 
        <MudTooltip Text="联系人管理" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="contacts" Icon="@Icons.Outlined.PersonPin"  IconColor="Color.Default"   >联系人管理</MudNavLink>
        </MudTooltip> 
    }
    else
    {
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Outlined.Home">首页</MudNavLink>
        <MudNavLink Href="PersonalFile" Icon="@Icons.Outlined.FilePresent">基础档案</MudNavLink>
        <MudNavGroup Title="PK" Icon="@Icons.Outlined.BubbleChart" Expanded="false">
            <MudNavLink Href="prescription"        Icon="@Icons.Outlined.ListAlt">给药方案</MudNavLink>
            <MudNavLink Href="bloodsample"   Icon="@Icons.Outlined.BlurOn" >采样信息</MudNavLink>
        </MudNavGroup>
            <MudNavGroup Title="PD"  Icon="@Icons.Outlined.Coronavirus" Expanded="false">
            <MudNavLink Href="clinicalmicrobiology"  Icon="@Icons.Outlined.Margin">临床微生物检查</MudNavLink>
            <MudNavLink Href="drugallergytesting"  Icon="@Icons.Outlined.BlurCircular">药敏试验</MudNavLink>
        </MudNavGroup>
            <MudNavGroup Title="PG"  Icon="@Icons.Outlined.Colorize" Expanded="false">
            <MudNavLink Href="Pharmacogenomics"  Icon="@Icons.Outlined.Opacity" >药物基因组学</MudNavLink>
            <MudNavLink Href="pathogengenes"  Icon="@Icons.Outlined.Vaccines">病原菌基因</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="影像学检查" Icon="@Icons.Outlined.Collections" Expanded="false">
            <MudNavLink Href="bronchofiberscope" Icon="@Icons.Filled.ImageAspectRatio">纤维支气管镜检查</MudNavLink>
            <MudNavLink Href="pathology" Icon="@Icons.Outlined.Hvac">病理检查</MudNavLink>
            <MudNavLink Href="iconography" Icon="@Icons.Outlined.Image">影像学检查</MudNavLink>
        </MudNavGroup>


        <MudNavLink Href="laboratoryexaminations" Icon="@Icons.Outlined.DeviceThermostat">实验室检查</MudNavLink>

        <MudNavLink Href="guardianship" Icon="@Icons.Outlined.Hotel">案列总结</MudNavLink>

        <MudNavLink Href="guardianshiplog" Icon="@Icons.Outlined.InsertDriveFile">监护日志</MudNavLink>

        <MudNavLink Href="contacts" Icon="@Icons.Outlined.PersonPin"  IconColor="Color.Default"   >联系人管理</MudNavLink>
    }
</MudNavMenu>

@code{

    [Parameter]
    public DrawerVariant NavVariant{ set; get; }
}
